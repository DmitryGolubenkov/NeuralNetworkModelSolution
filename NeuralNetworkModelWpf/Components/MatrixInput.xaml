<UserControl
    x:Class="NeuralNetworkModelWpf.Components.MatrixInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NeuralNetworkModelWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border
        Margin="4"
        Padding="2"
        BorderBrush="Gray"
        BorderThickness="0.5"
        CornerRadius="8">
        <StackPanel>
            <TextBlock
                x:Name="ErrorTextBlock"
                Margin="0,8"
                Foreground="DarkRed"
                TextWrapping="Wrap"
                Visibility="Collapsed" />
            <Button
                Width="Auto"
                Margin="0,5"
                Padding="5"
                HorizontalAlignment="Left"
                Click="Clear_Click">
                Сброс
            </Button>
            <Grid x:Name="RowsGrid" />
        </StackPanel>
    </Border>
</UserControl>
