<UserControl
    x:Class="NeuralNetworkModelWpf.Components.VectorInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NeuralNetworkModelWpf.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <WrapPanel x:Name="WP" />
        <TextBlock
            x:Name="ErrorTextBlock"
            Foreground="DarkRed"
            TextWrapping="Wrap"
            Visibility="Collapsed" />
        <Button
            Width="Auto"
            Margin="0,4,0,0"
            Padding="4"
            HorizontalAlignment="Left"
            Click="Clear_Click">
            Сброс
        </Button>
    </StackPanel>
</UserControl>
