<Window
    x:Class="NeuralNetworkModelWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:NeuralNetworkModelWpf.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NeuralNetworkModelWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Модель нейронной сети"
    Width="900"
    Height="450"
    mc:Ignorable="d">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Header="Управление">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <WrapPanel Grid.Column="0">
                    <Label>Размерность вектора:</Label>
                    <TextBox
                        x:Name="ElementCountTextbox"
                        Width="96"
                        PreviewTextInput="NumberValidationTextBox"
                        Text="3"
                        TextChanged="ElementCountTextbox_TextChanged" />
                </WrapPanel>
                <WrapPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">
                    <Button
                        Margin="4"
                        Padding="4"
                        Click="ClearEverything_Click">
                        Очистить всё
                    </Button>
                    <Button
                        Margin="4"
                        Padding="4"
                        Click="InsertExampleData_Click">
                        Ввести данные из примера
                    </Button>
                    <Button
                        Margin="4"
                        Padding="4"
                        Click="Solve_Click">
                        Выполнить расчёт
                    </Button>
                </WrapPanel>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="Вектор X:">
            <components:VectorInput x:Name="VectorInputX" Size="3" />
        </GroupBox>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <GroupBox Header="Матрица V">
                <StackPanel>
                    <components:MatrixInput x:Name="MatrixInputV" Size="3" />
                </StackPanel>

            </GroupBox>

            <GroupBox Grid.Column="1" Header="Матрица W">
                <StackPanel>
                    <components:MatrixInput x:Name="MatrixInputW" Size="3" />
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Column="2" Header="Результат">
                <StackPanel>
                    <components:NetworkResult x:Name="NetworkResultDisplay" Size="3" />
                </StackPanel>
            </GroupBox>

        </Grid>
    </Grid>
</Window>
